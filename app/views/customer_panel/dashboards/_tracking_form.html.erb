<div class="bg-white border border-gray-200 rounded-lg shadow-md p-4">
  <h3 class="text-xl font-semibold mb-4">Track Your Booking</h3>
  <%= form_with url: customer_trackings_path, method: :get, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :booking_id, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :booking_id, class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm" %>
    </div>
    <%= form.submit "Track", class: "bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600" %>
  <% end %>
</div>
