<h2 class="text-2xl font-bold mb-4">Blogs</h2>
<div class="grid grid-cols-3 gap-4">
  <% if @blogs.present? %>
    <% @blogs.each do |blog| %>
      <div class="card border rounded-lg p-4">
        <div class="card-image">
          <% if blog.image.attached? %>
            <%= image_tag blog.image, alt: blog.title, class: "w-full h-32 object-cover mb-4" %>
          <% else %>
            <%= image_tag 'cargo.jpg', alt: blog.title, class: "w-full h-32 object-cover mb-4" %>
          <% end %>
        </div>
        <div class="card-content">
          <h3 class="text-xl font-semibold"><%= blog.title %></h3>
          <p class="text-gray-600"><%= blog.published_at.strftime("%B %d, %Y") %></p>
          <p class="mt-2"><%= truncate(blog.content, length: 100) %></p>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>No blogs available.</p>
  <% end %>
</div>
